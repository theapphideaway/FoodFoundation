<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" android:layout_marginBottom="20dp"
        android:background="@android:color/background_light">

    <TextView
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/title"
            android:layout_alignParentEnd="true"
            android:textSize="24sp"
            android:fontFamily="@font/san_francisco"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp" android:textStyle="bold" android:textColor="@android:color/background_dark"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cardView"/>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cardView">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/food_image"
                android:scaleType="centerCrop"
        />
    </android.support.v7.widget.CardView>
